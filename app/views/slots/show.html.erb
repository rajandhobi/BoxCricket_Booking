<div class="card shadow-sm p-3">
  <h2 class="text-primary">Slot Details</h2>

  <div class="mt-3">
    <p><strong>Start Time:</strong> <%= @slot.start_time.strftime("%I:%M %p") %></p>
    <p><strong>End Time:</strong> <%= @slot.end_time.strftime("%I:%M %p") %></p>
    <p><strong>Price:</strong> â‚¹<%= @slot.price %></p>
    <p><strong>Status:</strong> 
      <span class="badge <%= @slot.status == 'available' ? 'bg-success' : 'bg-danger' %>">
        <%= @slot.status.capitalize %>
      </span>
    </p>

    <% if @slot.booking.present? %>
      <p><strong>Booked By:</strong> <%= @slot.booking.user.email %></p>
    <% end %>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= link_to "Edit Slot", edit_branch_ground_slot_path(@branch, @ground, @slot), class: "btn btn-warning btn-sm" %>
    <%= link_to "Back to Slots", branch_ground_slots_path(@branch, @ground), class: "btn btn-secondary btn-sm" %>
    <%= link_to "Back to Ground", branch_ground_path(@branch, @ground), class: "btn btn-light btn-sm" %>
  </div>
</div>
