<div class="mb-4">
<%= form_with(model: @slot, url: @slot.new_record? ? branch_ground_slots_path(@branch, @ground) : branch_ground_slot_path(@branch, @ground, @slot), method: @slot.new_record? ? :post : :patch, local: true, html: { class: "p-3 border rounded shadow-sm bg-white" }) do |form| %>
  
  <div class="row g-2">
    <div class="col-md-4">
      <%= form.label :start_time, class: "form-label small fw-bold" %>
      <%= form.time_select :start_time, {}, class: "form-control form-control-sm" %>
    </div>

    <div class="col-md-4">
      <%= form.label :end_time, class: "form-label small fw-bold" %>
      <%= form.time_select :end_time, {}, class: "form-control form-control-sm" %>
    </div>

    <div class="col-md-4">
      <%= form.label :price, class: "form-label small fw-bold" %>
      <%= form.number_field :price, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="mt-2">
    <%= form.label :status, "Slot Status", class: "form-label small fw-bold" %>
    <%= form.select :status, Slot::STATUSES, {}, class: "form-select form-select-sm w-25" %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit "Save Slot", class: "btn btn-sm btn-primary px-4" %>
  </div>

<% end %>
</div>