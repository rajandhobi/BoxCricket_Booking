<p style="color: green"><%= notice %></p>

<%= render @branch %>



<h2>Grounds in this Branch</h2>

<% if @grounds.any? %>
  <ul>
    <% @grounds.each do |ground| %>
      <li>
<%= link_to ground.name, branch_ground_path(@branch, ground) %>
        <%= ground.ground_type %> (â‚¹<%= ground.price_per_hour %>/hr)
      </li>
    <% end %>
  </ul>
<% else %>
