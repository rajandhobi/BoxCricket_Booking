<h2 class="mb-3 text-center">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-4 border rounded shadow-sm bg-white", style: "max-width: 400px; margin: auto;" }) do |f| %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label fw-bold small" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "Enter your email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label fw-bold small" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm", placeholder: "Enter your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label small" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log In", class: "btn btn-primary btn-sm px-4" %>
  </div>

<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
