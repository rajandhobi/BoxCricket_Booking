<h2 class="mb-3 text-center">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-4 border rounded shadow-sm bg-white", style: "max-width: 400px; margin: auto;" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label fw-bold small" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "Enter your email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-warning small p-2">Currently waiting confirmation for: <b><%= resource.unconfirmed_email %></b></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, class: "form-label fw-bold small" %> 
    <small class="text-muted">(leave blank if you don't want to change it)</small>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "New password" %>
    <% if @minimum_password_length %>
      <small class="text-muted d-block mt-1"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label fw-bold small" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Confirm new password" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: "form-label fw-bold small" %>
    <small class="text-muted">(we need your current password to confirm your changes)</small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-sm", placeholder: "Current password" %>
  </div>

  <div class="text-center">
    <%= f.submit "Update", class: "btn btn-primary btn-sm px-4" %>
  </div>

<% end %>

<h3 class="mt-4 text-center text-danger">Cancel My Account</h3>

<div class="text-center">
  <p class="small">Unhappy? You can delete your account permanently.</p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %>
</div>

<div class="text-center mt-3">
  <%= link_to "Back", :back, class: "btn btn-secondary btn-sm" %>
</div>
