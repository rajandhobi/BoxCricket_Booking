<h2 class="mb-3 text-center">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-4 border rounded shadow-sm bg-white", style: "max-width: 400px; margin: auto;" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label fw-bold small" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "Enter your email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label fw-bold small" %>
    <% if @minimum_password_length %>
      <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Enter your password" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label fw-bold small" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Confirm your password" %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign Up", class: "btn btn-primary btn-sm px-4" %>
  </div>

<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
