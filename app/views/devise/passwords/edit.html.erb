<h2 class="mb-3">Change Your Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "p-3 border rounded shadow-sm bg-white", style: "max-width: 350px; margin: auto;" }) do |f| %>
  
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "New Password", class: "form-label fw-bold small" %>
    <% if @minimum_password_length %>
      <div class="text-muted small mb-1">(<%= @minimum_password_length %> characters minimum)</div>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Enter new password" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirm New Password", class: "form-label fw-bold small" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Confirm new password" %>
  </div>

  <div class="text-center">
    <%= f.submit "Change Password", class: "btn btn-primary btn-sm px-4" %>
  </div>

<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
